GOSH = @GOSH@
GAUCHE_CONFIG = @GAUCHE_CONFIG@
INSTALL_TYPE = @INSTALL_TYPE@
INSTALL = @INSTALL@

TARGET = wiliki.scm wiliki/mcatalog.scm wiliki/msgs.jp \
	 wiliki/macro.scm wiliki/rss.scm
SCM_INSTALL_DIR     = `$(GAUCHE_CONFIG) --$(INSTALL_TYPE)libdir`

all: wiliki/msgs.jp

wiliki/msgs.jp: wiliki/msgs.jp.euc
	$(GOSH) -ugauche.charconv -e '(call-with-input-file "wiliki/msgs.jp.euc" (lambda (in) (call-with-output-file "wiliki/msgs.jp" (cut copy-port in <> :unit (quote char)))) :encoding "euc-jp")' -Eexit

clean :
	rm -rf core *~ wiliki/*~ wiliki/*.orig wiliki/msgs.jp

install:
	if test ! -d $(SCM_INSTALL_DIR)/wiliki; then \
	  $(INSTALL) -d $(SCM_INSTALL_DIR)/wiliki; \
	fi
	for f in $(TARGET); do \
	  $(INSTALL) -m 444 $$f $(SCM_INSTALL_DIR)/$$f; \
	done

distclean : clean
	rm -f Makefile

realclean : clean
	rm -f Makefile

